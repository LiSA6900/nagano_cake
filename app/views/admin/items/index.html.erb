<div class="container">
  <div class="row mr-0">
    <div class="col-10 mt-5 mb-2">
      <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">商品一覧</h4>
      <div class="text-right">
        <button type="button" class="btn btn-light rounded-circle p-0 shadow mb-5 bg-white rounded font-weight-bold" style="width:3rem;height:3rem;">
          <a href= "/admin/items/new", style="text-decoration: none;"><strong>＋</strong></a>
        </button>
      </div>
    </div>

    <table class="table mx-auto">
      <thead style="background-color: #F5F5F5;">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
             <span><%= item.name %></span>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
              <span style="color: green;", class= "font-weight-bold">販売中</span>
            <% else %>
              <span style="color: #C0C0C0;", class= "font-weight-bold">販売停止中</span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col mx-auto">
    <%= paginate @items %>
  </div>
</div>