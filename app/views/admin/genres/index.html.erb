<div class="container">
  <div class="row">
    <div class="col-7 my-5">
    <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">ジャンル<strong>一覧・追加</strong></h4>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-10">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <strong>ジャンル名</strong>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "mx-5" %>
        <%= f.submit '新規登録', class: "btn btn-success font-weight-bold px-4" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table col-4">
      <thead style="background-color: #F5F5F5;">
        <tr>
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success font-weight-bold btn-sm px-3" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>




</div>