<div class="container">
  <div class="row">
    <div class="col-10 my-5">
    <h4 class="bg-secondary px-3 d-inline-flex bg-opacity-25"><strong>管理者</strong>ログイン</h4>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-9 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row mb-3" >
        <%= f.label :"メールアドレス", class: "col-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-6 offset-1" %>
      </div>

      <div class="field row mb-5">
        <%= f.label :"パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-6 offset-1" %>
      </div>

      <div class="actions row">
        <%= f.submit "ログイン", class: "btn btn-primary offset-3 px-11" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>

    </div>
  </div>
</div>
