<div class="container">
  <div class="row">
    <div class="col-7 my-5">
      <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">注文履歴詳細</h4>
    </div>
  </div>

  <div class="row">
    <table class="col-7">
      <tbody>
        <tr>
          <td class= "pb-3">購入者</td>
          <td class= "pb-3"><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <td class= "pb-3">注文日</td>
          <td class= "pb-3"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class= "pb-3">配送先</td>
          <td class= "pb-3">
            〒<%= @order.postal_code %> <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class= "pb-3">支払方法</td>
          <td class= "pb-3"><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td class= "pb-3">注文ステータス</td>
          <td class= "pb-3">
            <%= form_with model: order, url: admin_order_path(order_id), method: :patch do |f| %>
              <%= f.collection_select :order_status, :OrderStatus.all, :id %>
              <%= f.submit "更新" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>