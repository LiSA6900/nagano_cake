<div class="container">
  <div class="row">
    <div class="col-7 my-5">
      <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="row">
    <table class="col-7">
      <tbody>
        <tr>
          <td class= "pb-3">会員ID</td>
          <td class= "pb-3"><%= @customer.id %></td>
        </tr>
        <tr>
          <td class= "pb-3">氏名</td>
          <td class= "pb-3"><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class= "pb-3">フリガナ</td>
          <td class= "pb-3"><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class= "pb-3">郵便番号</td>
          <td class= "pb-3"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class= "pb-3">住所</td>
          <td class= "pb-3"><%= @customer.address %></td>
        </tr>
        <tr>
          <td class= "pb-3">電話番号</td>
          <td class= "pb-3"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class= "pb-3">メールアドレス</td>
          <td class= "pb-3"><%= @customer.email %></td>
        </tr>
        <tr>
          <td class= "pb-3">退会ステータス</td>
          <td class= "pb-3">
            <% if @customer.is_deleted != true %>
              <span style="color: green;", class= "font-weight-bold">有効</span>
            <% else %>
              <span style="color: #C0C0C0;", class= "font-weight-bold">退会</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="row">
            <div class="col-4">
              <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success font-weight-bold px-4 btn-sm" %>
            </div>
            <div class="col-6">
              <%= link_to '注文履歴一覧を見る', edit_admin_item_path, class: "btn btn-primary font-weight-bold px-4 btn-sm" %>
            </div>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>