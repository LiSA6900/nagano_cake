<div class="container">
  <div class="row">
    <div class="col-11 my-3 mx-5 d-flex">
      <div>
        <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">注文履歴一覧</h4>
      </div>
    </div>

    <table class="cart table-bordered mb-4", style="width: 100%;">
      <thead>
        <tr>
          <td class="cart table-active", style="width: 15%;">注文日</td>
          <td class="cart table-active", style="width: 40%;">配送先</td>
          <td class="cart table-active", style="width: 15%;">注文商品</td>
          <td class="cart table-active", style="width: 10%;">支払金額</td>
          <td class="cart table-active", style="width: 10%;">ステータス</td>
          <td class="cart table-active", style="width: 10%;">注文詳細</td>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class= "cart"><%= order.created_at.strftime('%Y/%m/%d')  %></td>
          <td class= "cart">
            〒<%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>
          <td class= "cart">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td class= "cart"><%= order.price %>円</td>
          <td class= "cart"><%= order.order_status_i18n %></td>
          <td class= "cart">
           <%= link_to "表示する", root_path, class: "btn btn-primary font-weight-bold btn-sm" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>