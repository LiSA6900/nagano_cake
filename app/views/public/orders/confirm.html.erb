<div class="container">
  <div class="row">
    <div class="col-7 my-5 mx-5">
      <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">注文情報確認</h4>
    </div>

    <div class="d-flex", style="width: 90%;">
      <table>
        <tr>
          <table class="table-bordered", style="width: 70%;">
            <thead>
              <tr>
                <td class="table-active", style="width: 40%;">商品名</td>
                <td class="table-active", style="width: 10%;">単価(税込)</td>
                <td class="table-active", style="width: 10%;">数量</td>
                <td class="table-active", style="width: 10%;">小計</td>
              </tr>
            </thead>
            <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= image_tag cart_item.item.get_image(60,800) %>　<strong><%= cart_item.item.name %></strong></td>
                <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              </tr>
            <% end %>
          </table>
        </tr>

        <tr>
        　<table class="table-bordered", style="width: 30%;">
            <tbody>
              <tr>
                <td class="table-active py-1 pl-1", style="width: 15%;">送料</td>
                <td class="py-1 pl-1", style="width: 15%;">800円</td>
              </tr>
              <tr>
                <td class="table-active py-1 pl-1", style="width: 15%">商品合計</td>
                <td class="py-1 pl-1", style="width: 15%"><%= @total.to_s(:delimited) %></td>
              </tr>
              <tr>
                <td class="table-active py-1 pl-1", style="width: 15%">請求金額</td>
                <td class="py-1 pl-1", style="width: 15%"><%= (@total + 800).to_s(:delimited) %></td>
              </tr>
            </tbody>
          </table>
        </tr>
      </table>
    </div>

    <div class="d-flex">
      <h3>支払方法</h3>
      <p><%= @order.payment_method_i18n %></p>
    </div>

    <div class="d-flex">
      <h3>お届け先</h3>
      <p>〒<%= current_customer.postal_code %> <%= current_customer.address %></p>
    </div>
      <p><%= current_customer.last_name %><%= current_customer.first_name %></p>

    <%= link_to "注文を確定する", orders_complet_path, class: "btn btn-primary mt-3" %>

  </div>
</div>