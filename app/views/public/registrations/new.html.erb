<div class="container">
  <div class="row">
    <div class="col-8 my-5">
    <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3"><strong>新機会員登録</strong></h4>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-9 mx-auto">
    <%= form_with model:@customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="field">
        <tbody>
          <tr>
            <td>名前</td>
            <td>(姓)</td>
            <td><%= f.last_name_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
            <td>(名)</td>
            <td><%= f.first_name_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)</td>
            <td><%= f.last_name_kana_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
            <td>(メイ)</td>
            <td><%= f.first_name_kana_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.postal_code_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td></td>
            <td><%= f.address_field :address, autofocus: true, autocomplete: "address" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td></td>
            <td><%= f.telephone_number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>パスワード(6文字以上)"</td>
            <td></td>
            <td>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録" %></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    <% end %>

    <%= render "public/shared/links" %>

    </div>
  </div>
</div>
