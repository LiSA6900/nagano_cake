<div class="container">
  <div class="row">
    <div class="col-7 my-5">
      <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">配送先編集</h4>
    </div>

    <div class="form-group col-11 mb-5">
      <%= form_with model: @address, url:address_path, method: :patch do |f| %>
        <table class="field", style="width: 100%;">
          <tbody>
            <tr>
              <td class="mb-2", style="width: 25%;">郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postal_code, class: "form_cotrol mb-2" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td class="mb-2", style="width: 25%;">住所</td>
              <td colspan="2"><%= f.text_field :address, class: "form_cotrol mb-2 col-11 pl-0"%></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td class="mb-2", style="width: 25%;">宛名</td>
              <td><%= f.text_field :name, class: "form_cotrol mb-2" %></td>
              <td></td>
              <td><%= f.submit '変更内容を保存', class: "btn btn-success font-weight-bold px-4" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>