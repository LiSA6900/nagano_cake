<div class="container">
  <div class="row">
    <div class="col-11 my-3 mx-5 d-flex">
      <div>
        <h4 style="background-color: #F5F5F5;", class="d-inline-flex px-3">ショッピングカート</h4>
      </div>
      <div class="ml-auto">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger font-weight-bold btn-sm p-2" %>
      </div>
    </div>

    <table class="table-bordered mb-4", style="width: 100%;">
      <thead>
        <tr>
          <td class="table-active py-3 pl-1", style="width: 45%;">商品名</td>
          <td class="table-active py-3 pl-1", style="width: 15%;">単価(税込)</td>
          <td class="table-active py-3 pl-1", style="width: 15%;">数量</td>
          <td class="table-active py-3 pl-1", style="width: 15%;">小計</td>
          <td class="table-active py-3 pl-1", style="width: 15%;"></td>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class= "py-2 pl-1"><%= image_tag cart_item.item.get_image(70,100) %>　<strong><%= cart_item.item.name %></strong></td>
          <td class= "py-2 pl-1"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td class= "py-2 pl-1">
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
              <div class="d-flex">
                <%= f.select :amount, *[1..10], class: "form_control" %>
                <%= f.submit '変更', class: "btn btn-success font-weight-bold ml-4" %>
              </div>
            <% end %>
          </td>
          <td class= "py-2 pl-1"><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td class= "py-2 pl-1">
           <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger font-weight-bold btn-sm" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class= "col-12 d-inline-flex">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary font-weight-bold py-2" %>
      　<table class="table-bordered ml-auto">
          <tbody>
            <tr>
              <td class= "py-3 pl-1">合計金額</td>
              <td class= "py-3 pl-1"><%= @total.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
    </div>

    <div class="mx-auto">
      <%= link_to "情報入力に進む", items_path, class: "btn btn-success font-weight-bold py-2 px-4" %>
    </div>
  </div>
</div>